<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn">

    <EditText
        android:id="@+id/visitor_name"
        android:layout_width="375dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:hint="@string/visitor_name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/visitor_email"
        android:layout_width="375dp"
        android:layout_height="45dp"
        android:layout_margin="30dp"
        android:hint="@string/visitorEmail"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/visitor_name" />

    <Spinner
        android:id="@+id/employee_list"
        android:layout_width="375dp"
        android:layout_height="45dp"
        android:layout_margin="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/visitor_email" />

    <EditText
        android:id="@+id/visit_purpose"
        android:layout_width="375dp"
        android:layout_height="45dp"
        android:layout_margin="30dp"
        android:hint="@string/visit_purpose"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employee_list" />

    <ImageView
        android:id="@+id/visitor_photo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toBottomOf="@+id/visit_purpose"
        android:layout_marginTop="30dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_take_photo"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="@string/takePhoto"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/rounded_corner_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/visitor_photo"
        app:layout_constraintVertical_bias="0.282" />

    <Button
        android:id="@+id/visitor_submit"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="@string/submit"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/rounded_corner_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_take_photo"
        app:layout_constraintVertical_bias="0.282" />

</androidx.constraintlayout.widget.ConstraintLayout>